        <div class="form-group">
          <%= label_tag(:ce_catalog_title, 'Catalog Title', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_catalog_title, @ce_catalog_title, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_product_type, 'Product Type', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_product_type, @ce_product_type, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_price, 'Price', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_price, @ce_price, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_strike, 'Strike', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_strike, @ce_strike, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_sale, 'Sale', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_sale, @ce_sale, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_pdp_title, 'PDP Title', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_pdp_title, @ce_pdp_title, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_cart_title, 'Cart Title', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_cart_title, @ce_cart_title, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:ce_pdp_type, 'PDP Type', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:ce_pdp_type, @ce_pdp_type, class: 'form-control') %></div>
        </div>
      </div>
      <br>
    </div>

    <div class="form-horizontal">
      <h3>ATG Health Check - Vindicia Account</h3>

      <div>
        <h4 class="top15">Vindicia Account Setting</h4>

        <div class="form-group">
          <%= label_tag(:vin_username, '* Username', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= text_field_tag(:vin_username, @vin_username, class: 'form-control') %></div>
        </div>

        <div class="form-group">
          <%= label_tag(:vin_password, '* Password', class: 'col-sm-2 control-label') %>
          <div class="col-sm-5"><%= password_field_tag(:vin_password, @vin_password, class: 'form-control') %></div>
        </div>
      </div>
      <br>
    </div>

    <div class="form-horizontal">
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <%= submit_tag('UPDATE', class: 'btn btn-success') %>
        </div>
      </div>
    </div>
  <% end %>
</div>
