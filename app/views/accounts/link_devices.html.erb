<div class="glb-loader">
  <div></div>
</div>

<% provide(:title, 'Link devices to account') %>
<div class="col-xs-offset-3">
  <div class="content-header">
    <div class="header-inner">
      <h2>Link devices to your account</h2>

      <p class="subheader">
        This page allows you link devices to your account.
      </p>
    </div>
  </div>
  <div class="form-horizontal">
    <%= tc_radio_buttons_group :env, 'Environment (*)', ['QA', 'PROD'] %>
    <%= tc_text_input_group :atg_ld_email, 'Username (*)', nil, placeholder: 'e.g. example@abc.com' %>
    <%= tc_input_group(
          tc_label_tag(:atg_ld_password, 'Password (*)'),
          password_field_tag(:atg_ld_password, '', class: 'form-control')
        ) %>

    <div class="form-group">
      <%= label_tag :atg_ld_platform, 'Platform', class: 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= select_tag :atg_ld_platform, options_for_select(@all_platforms), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-7 radio">
        <label>
          <%= radio_button_tag :atg_ld, 'autolink', true %>
          <span>Auto link (System will generate children, devices and link to your account automatically)</span>
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-7 radio">
        <label>
          <%= radio_button_tag :atg_ld, 'noautolink' %>
          <span>Manual link (Enter Device serial and child ID)</span>
        </label>
      </div>
    </div>
    <%= tc_text_input_group :atg_ld_deviceserial, 'Device serial (*)', '', group_class: 'manual' %>
    <%= tc_text_input_group :atg_ld_children, 'Child ID', '', group_class: 'manual' %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <input type="button" value="Link device" name="commit" class="btn btn-success js-validate-env-locale">
      </div>
    </div>
  </div>
</div>
