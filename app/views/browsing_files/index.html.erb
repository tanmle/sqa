<% provide(:title, 'Checksum Results') %>
<h1>Checksum Results</h1>
<div class='col-xs-offset-1'>
  <div class='result'>
      <p>
        <b>Current path: <%= raw @path %></b>
      </p>
      <% if @content!='' %>
        <div class="table-responsive">
          <table class="summary_table">
            <thead>
            <tr class='highlights'>
              <td>Folders</td>
              <td colspan='2'>Actions</td>
            </tr>
            </thead>
            <tbody>
            <%= raw @content %>
            </tbody>
          </table>
        </div>
      <% end %>
      <br/>
      <% unless @file.nil? %>
        <div class="table-responsive">
          <table class="summary_table">
            <thead>
            <tr class='highlights'>
              <td>Files</td>
              <td>Size</td>
            </tr>
            </thead>
            <tbody>
            <%= raw @file %>
            </tbody>
          </table>
        </div>
      <% end %>
  </div>
</div>
<script>
    function confirm_delete() {
        return confirm('Are you sure you want to delete?');
    }
</script>
