<% provide(:title, 'Create User') %>
<div class="col-xs-offset-3">
  <div class="content-header">
    <div class="header-inner">
      <h2>Create new User</h2>
      <p class="subheader">Enter email then click on Search button to update User information or create a new User</p>
    </div>
  </div>

  <%= form_tag({controller: 'users', action: 'create'}, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag(:email, 'Email', class: 'col-sm-2 control-label') %>
    <div class="col-sm-5">
      <div class="input-group">
        <%= text_field_tag(:email, @email, placeholder: 'example@abc.com', class: 'form-control') %>
        <span class="input-group-btn">
          <%= submit_tag('Search', class: 'btn btn-success') %>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:first_name, 'First name', class: 'col-sm-2 control-label') %>
    <div class="col-sm-5">
      <%= text_field_tag(:first_name, @fname, class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:last_name, 'Last name', class: 'col-sm-2 control-label') %>
    <div class="col-sm-5">
      <%= text_field_tag(:last_name, @lname, class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:password, 'Password', class: 'col-sm-2 control-label') %>
    <div class="col-sm-5">
      <%= password_field_tag(:password, '', class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :role_id, 'Role', class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= select_tag 'role_id', options_for_select([['Administrator', 1], ['Power User', 2], ['QA', 3]]), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:is_active, 'Active', class: 'col-sm-2 control-label') %>
    <div class="col-sm-5">
      <%= check_box_tag(:is_active, 1, true, class: 'checkbox') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= submit_tag('Create', class: 'btn btn-success') %>
    </div>
  </div>
  <% end %>
</div>

<script>
  $().ready(function () {
    $('#user_fname').val($('#fname').val());
    $('#user_lname').val($('#lname').val());
    $('#user_email').val($('#username').val());
    $('#user_password').val($('#password').val());
  });
</script>
